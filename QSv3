    </div> <div class="progress-indicator" id="progressIndicator">
        <div class="progress-bar" id="progressBar"></div>
    </div>
    <nav class="navigation-controls" id="navControls">
        <button id="prevBtn" aria-label="Önceki Slayt" disabled>&lt;</button>
        <span id="slideCounter" aria-live="polite">1 / 15</span>
        <button id="nextBtn" aria-label="Sonraki Slayt">&gt;</button>
    </nav>
    <script>
        // DOM Elementlerini Seçme (Tekrar Kontrol)
        const slides = document.querySelectorAll('.slide');
        const prevBtn = document.getElementById('prevBtn');
        const nextBtn = document.getElementById('nextBtn');
        const slideCounter = document.getElementById('slideCounter');
        const progressBar = document.getElementById('progressBar');
        const navControls = document.getElementById('navControls'); // Navigasyon varlığını kontrol için
        const progressIndicator = document.getElementById('progressIndicator');

        // CSS'ten geçiş süresini alma
        const transitionSpeed = parseFloat(getComputedStyle(document.documentElement).getPropertyValue('--transition-speed') || '0.7') * 1000; // 0.7s = 700ms

        // Durum Değişkenleri
        let currentSlide = 1;
        const totalSlides = slides.length;
        let isTransitioning = false; // Aynı anda birden fazla geçişi engellemek için bayrak

        /** UI Güncelleme Fonksiyonu */
        function updateUI(slideIndex) {
            if (!prevBtn || !nextBtn || !slideCounter || !progressBar) {
                console.error("UI elements not found!");
                return;
            }
            prevBtn.disabled = (slideIndex === 1);
            nextBtn.disabled = (slideIndex === totalSlides);
            slideCounter.textContent = `${slideIndex} / ${totalSlides}`;
            const progressPercent = (slideIndex / totalSlides) * 100;
            progressBar.style.width = `${progressPercent}%`;
             // Hata ayıklama için log
             // console.log(`UI Updated: Slide ${slideIndex}, Progress: ${progressPercent}%`);
        }

        /** Slayt Gösterme Fonksiyonu */
        function showSlide(slideIndex) {
             if (isTransitioning) return; // Eğer geçiş devam ediyorsa yenisini başlatma

            const targetSlide = document.getElementById(`slide${slideIndex}`);
            if (!targetSlide) {
                console.error(`Slide with index ${slideIndex} not found.`);
                return;
            }

            const currentActiveSlide = document.querySelector('.slide.active');

            if (currentActiveSlide && currentActiveSlide.id === targetSlide.id) {
                return; // Zaten aktif olan slaytı tekrar gösterme
            }

             isTransitioning = true; // Geçiş başladı
             // console.log(`Transitioning from ${currentActiveSlide?.id} to ${targetSlide.id}`);


            // Mevcut slaytı çıkar
            if (currentActiveSlide) {
                currentActiveSlide.classList.remove('active');
                currentActiveSlide.classList.add('exiting');

                // Geçiş bittikten sonra 'exiting' sınıfını temizle
                setTimeout(() => {
                     // DOM'dan kaldırılmamışsa ve hala 'exiting' ise temizle
                    if (document.body.contains(currentActiveSlide) && currentActiveSlide.classList.contains('exiting')) {
                        currentActiveSlide.classList.remove('exiting');
                         // console.log(`Cleaned up exiting class from ${currentActiveSlide.id}`);
                    }
                     // isTransitioning bayrağını burada false yapmak yerine,
                     // yeni slayt tamamen göründükten sonra yapmak daha güvenli olabilir.
                }, transitionSpeed); // CSS'deki süre kadar bekle
            }

            // Yeni slaytı göster
            targetSlide.classList.remove('exiting'); // Önemli: Hızlı geri dönüşte kalmış olabilir
            targetSlide.classList.add('active');
            targetSlide.scrollTop = 0; // İçeriği başa sar

            // Yeni slaytın animasyonu bittikten sonra geçiş bayrağını sıfırla
             setTimeout(() => {
                 isTransitioning = false;
                 // console.log("Transition finished.");
             }, transitionSpeed); // Geçiş süresi kadar sonra

            // UI elemanlarını güncelle
            updateUI(slideIndex);
        }

        /** Yönlü Slayt Değiştirme */
        function changeSlide(direction) {
            const newSlideIndex = currentSlide + direction;
            if (newSlideIndex >= 1 && newSlideIndex <= totalSlides) {
                currentSlide = newSlideIndex;
                showSlide(currentSlide);
            }
        }

        // === Olay Dinleyicileri ===
         if (prevBtn && nextBtn) { // Butonların varlığını kontrol et
            prevBtn.addEventListener('click', () => changeSlide(-1));
            nextBtn.addEventListener('click', () => changeSlide(1));
         } else {
             console.error("Navigation buttons not found!");
         }


        document.addEventListener('keydown', (event) => {
            if (document.activeElement === prevBtn || document.activeElement === nextBtn) {
               if (event.key === 'Enter' || event.key === ' ') { return; }
            }
            if (['ArrowRight', 'ArrowLeft', 'ArrowUp', 'ArrowDown', ' ', 'PageDown', 'PageUp'].includes(event.key)) {
                event.preventDefault();
            }
            if (event.key === 'ArrowRight' || event.key === ' ' || event.key === 'PageDown' || event.key === 'ArrowDown') {
                if (nextBtn && !nextBtn.disabled) { changeSlide(1); }
            } else if (event.key === 'ArrowLeft' || event.key === 'PageUp' || event.key === 'ArrowUp') {
                if (prevBtn && !prevBtn.disabled) { changeSlide(-1); }
            }
        });

        // === Başlangıç Ayarları ===
        document.addEventListener('DOMContentLoaded', () => {
            console.log("DOM Loaded. Initializing presentation...");
            if (totalSlides > 0) {
                 // Navigasyon elemanlarının varlığını kontrol et
                 if (!navControls || !progressIndicator) {
                      console.error("Navigation or progress bar container not found in HTML!");
                 }

                // İlk slaytın 'active' sınıfı HTML'de zaten var.
                // Başlangıç UI durumunu ayarla.
                updateUI(currentSlide);
                 console.log(`Presentation initialized with ${totalSlides} slides. Current slide: ${currentSlide}`);

                 // Gerekirse ilk slaytın stillerini zorla uygula (CSS önceliği sorunlarına karşı)
                  const firstSlide = document.getElementById('slide1');
                  if (firstSlide && firstSlide.classList.contains('active')) {
                      requestAnimationFrame(() => { // Tarayıcının stilleri işlemesi için bekle
                          firstSlide.style.opacity = 1;
                          firstSlide.style.visibility = 'visible';
                          firstSlide.style.transform = 'translateX(0) scale(1) rotateY(0deg)';
                          firstSlide.style.pointerEvents = 'auto'; // Tıklanabilir yap
                          console.log("Ensured first slide is visible.");
                      });
                  } else {
                      console.error("First slide does not have 'active' class in HTML!");
                  }

            } else {
                console.warn("Sunum için slayt bulunamadı.");
                if(navControls) navControls.style.display = 'none';
                if(progressIndicator) progressIndicator.style.display = 'none';
            }
        });
    </script>

</body>
</html>
